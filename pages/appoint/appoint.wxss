/* pages/send/send.wxss */
.send-top{
  height: 15px;
  background: linear-gradient(180deg,#1296ee 0% ,#158CE9 100%);
  position: absolute;
  top:66px;
  width: 100%;
  z-index:-1;
}
.send-body{
  background: #fff;
  border-radius: 15px 15px 0 0;
  width:100%;
  padding:27px 16px 61px;
  box-sizing: border-box;
}
.send-body .send-body-form-line{
  padding: 10px 0 ;
  box-sizing: border-box;
  border-bottom: 1px dashed #E5E5E5;
  display: flex;
  justify-content: space-between;
  margin-bottom:10px;
}
.send-body .send-body-form-line>view:first-child{
  font-size: 15px;
  width: 60px;
  text-align: justify;
  text-align-last: justify;
}
.scan{
  position: absolute;
  width:24px;
  height: 24px;
  background: #D8EFFE;
  right:0;
  top:50%;
  transform: translateY(-50%);
  border-radius: 50%;
}
.scan image{
  width:12px;
  height: 12px;
  margin:6px 6px;
}
.checkbox-group{
  display: flex;
  max-width:285px;
}
.iview-checkbox{
  margin-left: 10px;
  margin-bottom: 10px;
}
.select-arrow-down{
  position: absolute;
  right:0;
  top:0;
  width: 16px;
  height:16px;
}
.upload-image{
  width: 75px;
  height: 75px;
  box-sizing: border-box;
  border:1px dashed #ccc;
  text-align: center;
  border-radius:3px;
  margin:0 0 10px 10px;
  position: relative;
}
.upload-image .delete{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  position: absolute;
  top: 0;
  left: 0;
}
.upload-image .delete image{
  width: 20px;
  height: 20px;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  position:absolute;
}
.upload-image:nth-child(3n+1){
  margin-left: 0;
}
.upload-image>image{
  width: 100%;
  height: 100%;
}
.upload-image .cross{
  width:20px;
  height: 20px;
  /* border:1px dashed #888; */
  margin: 17px auto 0;
}
.upload-image .cross image{
  width:18px;
  height:18px;
}
.upload-image-text{
  font-size: 14px;
  color:#666;
  margin-top:10px;
}
.confirm{
  height:40px;
  background:linear-gradient(132deg,rgba(84,184,246,1) 0%,rgba(46,93,207,1) 100%);
  border-radius:20px;
  line-height: 40px;
  color:#fff;
}
.upload-iamge-content{
  width: 245px;
  display: flex;
  flex-direction: row-reverse;
  flex-wrap:wrap;
}
.has-image{
  flex-direction: row;
}
.image-swipper{
  width: 100vw;
  height: 100vh;
  position: absolute;
  background: #000;
  top:0;
  left: 0;
  z-index:101;
}
.image-swipper>.image-content{
  height: calc(100vh - 186px);
  position: absolute;
  width: 100%;
  bottom:60px;
  left: 0;
  background-size: contain;
}
.image-swipper>.image-content>image{
  width: 100%;
  height: 100%;
}
.image-swipper>.top-icons{
  height: 60px;
  width: 100%;
  position: relative;
  top:66px;
}
.image-swipper>.top-icons>image.delete-icon{
  width: 20px;
  height: 20px;
  top:50%;
  right: 20px;
  transform: translateY(-50%);
  position: absolute;
}
.image-swipper>.bottom-num{
  color:#fff;
  font-size: 15px;
  text-align: center;
  position: absolute;
  bottom: 0;
  height: 60px;
  line-height: 60px;
  width: 100%;
}
.picker{
  font-size: 14px;
  margin-right:20px;
}
/* pages/list/list.wxss */
.list-head {
  height: 15px;
  background: linear-gradient(180deg, #1296ee 0%, #158CE9 100%);
  position: relative;
  width: 100%;
  z-index: -1;
}

.list-body {
  position: relative;
  top: -15px;
  background: #fff;
  border-radius: 15px 15px 0 0;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 61px;
}

.list-body .list-body-image {
  width: 100%;
  height: 180px;
  border-radius: 15px 15px 0 0;
  overflow: hidden;
}

.list-body .list-body-image image {
  width: 100%;
  height: 100%;
}

.list-body .list-items-content {
  width: calc(100% - 20px);
  margin: 0 auto;
  box-shadow: -2px 0px 10px 0px rgba(233, 243, 247, 1);
  border-radius: 4px;
  margin-top: 5px;
}

.list-body .list-items-content .list-item {
  padding: 18px;
  border-bottom: 1px dashed #E5E5E5;
}

.list-body .list-items-content .list-item:last-child {
  border-bottom: 0px;
}

.list-body .list-items-content .list-item .list-item-image {
  width: 78px;
  height: 90px;
  margin-right: 17px;
}

.list-body .list-items-content .list-item .list-item-image>image {
  width: 100%;
  height: 100%;
}

.list-body .list-items-content .list-item .list-item-top {
  height: 20px;
  line-height: 20px;
  margin-bottom: 20px;
  position: relative;
  display: flex;
  justify-content: space-between;
}

.list-body .list-items-content .list-item .list-item-top .list-item-top-loop {
  width: 20px;
  height: 20px;
  position: absolute;
  top: 0;
  left: 0;
}

.trusteeship {
  color: #000;
  font-weight: bold;
}

.taking {
  color: #F5A623;
  font-weight: bold;
}

.list-body .list-items-content .list-item .list-item-content {
  display: flex;
}

.list-body .list-items-content .list-item .list-item-content .list-item-main {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list-body .list-items-content .list-item .list-item-content .list-item-main>.list-item-lables>.list-item-lable {
  display: inline-block;
  /* padding: 0 12px; */
  /* border:1px solid #4A90E2; */
  /* color:#4A90E2; */
  margin-right: 10px;
  font-size: 13px;
  height: 19px;
  line-height: 19px;
}

.list-body .list-items-content .list-item .list-item-content .list-item-main>.list-item-date {
  font-size: 14px;
  /* color:#C22E35; */
}

.list-body .list-items-content .list-item .list-item-content .list-item-main>.list-item-buttons>button:last-child {
  margin: 0;
}

.detail-button,
.renew-button,
.retrieval-button {
  height: 24px;
  line-height: 24px;
  font-size: 13px;
  margin: 0 10px 0 0;
  border-radius: 12px;
  background: #fff;
  padding: 0 12px;
  display: inline-block;
}

.detail-button {
  border: 1px solid #4CA4EE;
  color: #4CA4EE;
}

.renew-button {
  border: 1px solid #4FA73F;
  color: #4FA73F;
}

.retrieval-button {
  border: 1px solid #F5A623;
  color: #F5A623;
}

.empty-image {
  position: fixed;
  width: 100%;
  top: 50%;
  transform: translateY(calc(-50% - 66px));
}

.empty-image image {
  width: 40%;
  height: 180px;
  margin: 20px 30% 0;
}

.empty-image .empty-text {
  color: #ccc;
  width: 100%;
  text-align: center;
  font-size: 14px;
  margin-top: 20px;
}

/**index.wxss**/
.main {
  position: absolute;
  top: 50%;
  left: 5%;
  border-radius: 10px;
  display: block;
  margin: 0 auto;
  /* height: 400px; */
  width: 90%;
  background-color: #ccc;
  transform: translateY(-50%);
  overflow: hidden;
}

.main-top {
  padding: 10px;
  display: block;
  text-align: center;
  font-size: 18px;
  font-family: SourceHanSansSC;
  font-weight: bold;
  color: rgb(72, 143, 225);
  background-color: rgb(248, 249, 251);
}

.text {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 90%;
  transform: translate(-50%, -50%);
}

.main-second {
  position: relative;
  margin: 0 auto;
  height: 80px;
  background-color: rgb(248, 249, 251);
}

.main-second-box {
  color: rgb(72, 143, 225);
  font-size: 16px;
  width: 80px;
  margin-left: 4%;
}

.main-second-box-text {
  font-size: 16px;
  margin-left: 5%;
  color: rgb(72, 143, 225);
}

.main-second-text {
  vertical-align: middle;
  padding: 5px;
  display: flex;
  height: 21px;

  /* height: 50px; */
}

.main-third {
  position: relative;
  /* margin: 0 5px; */
  height: 90%;
  background-color: white;
}

.send-body-form-line {
  width: 90%;
  padding: 10px 0;
  box-sizing: border-box;
  border: 1px solid rgb(238, 238, 238);
  display: flex;
  border-radius: 40px;
  justify-content: space-between;
  margin: 0 auto;
  margin-bottom: 10px;

}

.sure {
  width: 85%;
  color: rgb(72, 143, 225);
  border: 1px solid rgb(72, 143, 225);
  border-radius: 40px;
  background-color: white;
}

.price {
  padding: 10px 0;
  box-sizing: border-box;
  border-radius: 40px;
  text-align: center;
}

.thefirstshow {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 101;
}

.select-arrow-down {
  width: 16px;
  height: 16px;
}

.cancel {
  display: block;
  width: 85%;
  color: rgb(167, 167, 167);
  background-color: white;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
  border-radius: 40px;
  border: 1px solid rgb(167, 167, 167);
}
/* pages/list/list.wxss */
.list-head{
  height: 15px;
  background: linear-gradient(180deg,#1296ee 0% ,#158CE9 100%);
  position: absolute;
  top:66px;
  width: 100%;
  z-index:-1;
}
.list-body{
  background: #fff;
  border-radius: 15px 15px 0 0;
  width:100%;
  box-sizing: border-box;
  padding-bottom: 61px;
}
.list-body .list-body-image{
  width: 100%;
  height: 180px;
  border-radius: 15px 15px 0 0;
  overflow: hidden;
}
.list-body .list-body-image image{
  width: 100%;
  height: 100%;
}
.list-body .list-items-content{
  width: calc(100% - 20px);
  margin: 0 auto;
  box-shadow:-2px 0px 10px 0px rgba(233,243,247,1);
  border-radius:4px;
  margin-top: 5px;
}
.list-body .list-items-content .list-item{
  padding:18px; 
  border-bottom: 1px dashed #E5E5E5; 
}
.list-body .list-items-content .list-item:last-child{
  border-bottom: 0px;
}
.list-body .list-items-content .list-item .list-item-image{
  width:78px;
  height:90px;
  margin-right:17px;
}
.list-body .list-items-content .list-item .list-item-image>image{
  width:100%;
  height:100%;
}
.list-body .list-items-content .list-item .list-item-top{
  height:20px;
  line-height: 20px;
  margin-bottom: 20px;
}
.list-body .list-items-content .list-item .list-item-top>.list-item-top-loop{
  width: 20px;
  height: 20px;
}
.trusteeship{
  color:#000;
  font-weight: bold;
}
.taking{
  color:#F5A623;
  font-weight: bold;
}
.list-body .list-items-content .list-item .list-item-content{
  display: flex;
}
.list-body .list-items-content .list-item .list-item-content .list-item-main{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.list-body .list-items-content .list-item .list-item-content .list-item-main>.list-item-lables>.list-item-lable{
  display: inline-block;
  margin-right: 10px;
  padding: 5px;
  border:1px solid #4A90E2;
  color:#4A90E2;
  margin-bottom: 10px;
  font-size: 13px;
  height: 19px;
  line-height: 19px;

}
.list-body .list-items-content .list-item .list-item-content .list-item-main>.list-item-date{
  font-size: 16px;
  margin-top: 10px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
}
.list-body .list-items-content .list-item .list-item-content .list-item-main>.list-item-buttons>button:last-child{
  margin: 0;
}
.detail-button,.renew-button,.retrieval-button{
  height: 24px;
  line-height: 24px;
  font-size: 13px;
  margin:0 10px 0 0;
  border-radius:12px;
  background: #fff;
  padding: 0 12px;
  display: inline-block;
}
.detail-button{
  border:1px solid #4CA4EE;
  color:#4CA4EE;
}
.renew-button{
  border:1px solid rgb(127,127,127);
  color:rgb(127,127,127);
  margin-top: 28px;
}
.retrieval-button{
  border:1px solid #F5A623;
  color:#F5A623;
}
.empty-image{
  position: absolute;
  width: 100%;
  top:50%;
  transform: translateY(calc(-50% - 66px));
}
.empty-image image{
  width:40%;
  height:180px;
  margin:20px 30% 0;
}
.empty-image .empty-text{
  color:#ccc;
  width: 100%;
  text-align: center;
  font-size: 14px;
  margin-top: 20px;
}
.image-swipper{
  width: 100vw;
  height: 100vh;
  position: absolute;
  background: #000;
  top:0;
  left: 0;
  z-index:101;
}
.image-swipper>.top-icons{
  height: 60px;
  width: 100%;
  position: relative;
  top:66px;
}
.image-swipper>.top-icons>image.delete-icon{
  width: 20px;
  height: 20px;
  top:50%;
  right: 20px;
  transform: translateY(-50%);
  position: absolute;
}
.image-swipper>.image-content{
  height: calc(100vh - 186px);
  position: absolute;
  width: 100%;
  bottom:60px;
  left: 0;
  background-size: contain;
}
.image-swipper>.image-content>image{
  width: 100%;
  height: 100%;
}
.image-swipper>.bottom-num{
  color:#fff;
  font-size: 15px;
  text-align: center;
  position: absolute;
  bottom: 0;
  height: 60px;
  line-height: 60px;
  width: 100%;
}
.list-item-img{
  height: 80px;
  width: 80px;
  border-radius: 10px;
}
.list-item-money{
  display: inline-block;
  color: green;
  font-weight: bold;
}